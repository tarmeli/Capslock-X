{
  "title": "CapsLock-X",
  "version": "1.0.0",
  "maintainers": [
    "Tarmeli"
  ],
  "homepage": "https://github.com/tarmeli/Capslock-X",
  "import_url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/tarmeli/Capslock-X/blob/main/capslock-x.json",
  "rules": [
    {
      "description": "CapsLock to Hyper",
      "manipulators": [
        {
          "description": "CapsLock click equal to ESC press equal to hyper",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        },
        {
          "description": "ESC equal to CapsLock",
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "caps_lock"
              ],
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
