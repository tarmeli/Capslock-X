        }
      ]
    },
    {
      "description": "Delete text",
      "manipulators": [
        {
          "description": "Delete the character to the left of the insertion point",
          "type": "basic",
          "from": {
            "key_code": "space",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        },
        {
          "description": "Delete the entire line before the cursor",
          "type": "basic",
          "from": {
            "key_code": "space",
            "modifiers": {
              "mandatory": [
                "left_command",
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
